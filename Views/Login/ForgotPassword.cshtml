@{
    ViewData["Title"] = "Forgot Password";
}
<h3>Forgot your password?</h3>
<p>Enter your email or employee number. If we find a match, we’ll email a reset link.</p>
<form asp-action="ForgotPassword" method="post">
    @Html.AntiForgeryToken()
    <div class="mb-3"><input class="form-control" name="emailOrEmployeeNumber" placeholder="Email or Employee Number" required /></div>
    <button class="btn btn-primary">Send reset link</button>
</form>

