@{
    ViewData["Title"] = "Reset Password"; var token = (string)ViewBag.Token;
}
<h3>Set a new password</h3>
@if (ViewBag.Error != null)
{
    <div class="alert alert-danger">@ViewBag.Error</div>
}
<form asp-action="ResetPassword" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" name="token" value="@token" />
    <div class="mb-3"><label>New password</label><input class="form-control" type="password" name="newPassword" required /></div>
    <div class="mb-3"><label>Confirm password</label><input class="form-control" type="password" name="confirmPassword" required /></div>
    <button class="btn btn-primary">Update password</button>
</form>

