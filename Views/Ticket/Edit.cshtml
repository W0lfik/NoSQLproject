@model CreateTicketViewModel
@{
    ViewData["Title"] = "Edit Ticket";
}

<h2>Edit Ticket @Model.Ticket.TicketNumber</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Ticket.Id" />
    <div class="mb-3">
        <label asp-for="Ticket.TicketNumber" class="form-label"></label>
        <input asp-for="Ticket.TicketNumber" class="form-control" readonly/>
    </div>

    <div class="mb-3">
        <label asp-for="Ticket.Title" class="form-label"></label>
        <input asp-for="Ticket.Title" class="form-control"/>
        <span asp-validation-for="Ticket.Title" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Ticket.Description" class="form-label"></label>
        <textarea asp-for="Ticket.Description" class="form-control"></textarea>
    </div>

    <div class="mb-3">
        <label asp-for="Ticket.Priority" class="form-label"></label>
        <select asp-for="Ticket.Priority" class="form-select"
                asp-items="Html.GetEnumSelectList<NoSQLproject.Models.Priority>()"></select>
    </div>

    <div class="mb-3">
        <label asp-for="Ticket.IncidentType" class="form-label"></label>
        <select asp-for="Ticket.IncidentType" class="form-select"
                asp-items="Html.GetEnumSelectList<NoSQLproject.Models.IncidentType>()"></select>
    </div>

    <div class="mb-3">
        <label asp-for="Ticket.State" class="form-label"></label>
        <select asp-for="Ticket.State" class="form-select"
                asp-items="Html.GetEnumSelectList<NoSQLproject.Models.State>()"></select>
    </div>

    <div class="mb-3">
        <label class="form-label">Created By</label>
        <select asp-for="CreatedByUserId" asp-items="Model.UsersSelect" class="form-select">
            <option value="">-- None --</option>
        </select>
    </div>

    <div class="mb-3">
        <label class="form-label">Handled By</label>
        <select asp-for="HandledByUserIds" asp-items="Model.UsersSelect" class="form-select" multiple size="6"></select>
    </div>

    <div class="mb-3">
        <label asp-for="Ticket.Deadline" class="form-label"></label>
        <input asp-for="Ticket.Deadline" type="datetime-local" class="form-control"/>
    </div>

    <!-- keep CreatedAt visible but read-only if you like -->
    <div class="mb-3">
        <label asp-for="Ticket.CreatedAt" class="form-label"></label>
        <input asp-for="Ticket.CreatedAt" class="form-control" readonly/>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Details" asp-route-ticketNumber="@Model.Ticket.TicketNumber" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts { <partial name="_ValidationScriptsPartial" /> }
