@model NoSQLproject.Models.EditUserVm
@{
    ViewData["Title"] = "Edit user";
}
<link rel="stylesheet" href="~/css/ticket.css" /> 

<div class="container d-flex justify-content-center align-items-start" style="min-height: 80vh;">
    <div class="col-lg-7 col-md-9 col-sm-11">
        <h2 class="mb-4 text-center">Edit User</h2>

        <form asp-action="Edit" method="post" autocomplete="off">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" />

            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="card card-strong">
                <div class="card-body p-4">
                    <div class="row g-3">
                        <div class="col-md-8">
                            <label asp-for="FullName" class="form-label fw-semibold">Full name</label>
                            <input asp-for="FullName" class="form-control" autofocus />
                            <span asp-validation-for="FullName" class="text-danger small"></span>
                        </div>

                        <div class="col-md-4">
                            <label asp-for="EmployeeNumber" class="form-label fw-semibold">Employee #</label>
                            <input asp-for="EmployeeNumber" class="form-control" readonly />
                            <div class="form-text">System-assigned (read-only).</div>
                        </div>

                        <div class="col-md-6">
                            <label asp-for="Email" class="form-label fw-semibold">Email</label>
                            <input asp-for="Email" class="form-control" type="email" />
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>

                        <div class="col-md-6">
                            <label asp-for="Phone" class="form-label fw-semibold">Phone</label>
                            <input asp-for="Phone" class="form-control" type="tel" />
                            <span asp-validation-for="Phone" class="text-danger small"></span>
                        </div>

                        <div class="col-md-6">
                            <label asp-for="Location" class="form-label fw-semibold">Location</label>
                            <input asp-for="Location" class="form-control" />
                            <span asp-validation-for="Location" class="text-danger small"></span>
                        </div>

                        <div class="col-md-6">
                            <label asp-for="TypeOfUser" class="form-label fw-semibold">Role</label>
                            <select asp-for="TypeOfUser" class="form-select"
                                    asp-items="Html.GetEnumSelectList<NoSQLproject.Models.TypeOfUser>()"></select>
                            <span asp-validation-for="TypeOfUser" class="text-danger small"></span>
                        </div>

                        <div class="col-12">
                            <label asp-for="NewPassword" class="form-label fw-semibold">New password (optional)</label>
                            <input asp-for="NewPassword" class="form-control" type="password" autocomplete="new-password" />
                            <span asp-validation-for="NewPassword" class="text-danger small"></span>
                            <div class="form-text">Leave blank to keep the current password.</div>
                        </div>
                    </div>

                    <div class="d-flex justify-content-center gap-3 mt-4">
                        <button type="submit" class="btn btn-primary px-4">Update</button>
                        <a asp-action="Index" class="btn btn-outline-secondary px-4">Cancel</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
