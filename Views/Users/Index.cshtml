@model IEnumerable<NoSQLproject.Models.User>
@{
    ViewData["Title"] = "Users";
}
<h2>Users</h2>

<form asp-action="Index" method="get" class="mb-3 d-flex gap-2">
    <input type="text"
           name="search"
           value="@ViewBag.Search"
           class="form-control"
           placeholder="Search by employee number, name, or email" />
    <button type="submit" class="btn btn-outline-primary">Search</button>
    <a asp-action="Index" class="btn btn-outline-secondary">Reset</a>
</form>

<p><a class="btn btn-primary" asp-action="Create">Add new</a></p>

<table class="table table-striped align-middle">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Emp #</th>
            <th>Type</th>
            <th>Location</th>
            
        </tr>
    </thead>
    <tbody>
        @if (Model.Any())
        {
            foreach (var u in Model)
            {
                <tr>
                    <td>@u.FullName</td>
                    <td>@u.Email</td>
                    <td>@u.EmployeeNumber</td>
                    <td>@u.TypeOfUser</td>
                    <td>@u.Location</td>
                    <td>
                        <a class="btn btn-sm btn-outline-secondary" asp-action="Edit" asp-route-id="@u.Id">Edit</a>
                        <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@u.Id">Delete</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="5" class="text-muted text-center">No users found.</td>
            </tr>
        }
    </tbody>
</table>
